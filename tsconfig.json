{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "src/"
  },
  "include": ["src/*.ts"],
  "exclude": [
    "node_modules/**/*",
    "package-lock.json",
    "package.json",
    "tsconfig.json"
  ]
}